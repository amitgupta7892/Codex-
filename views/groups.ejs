<!DOCTYPE html>
<html lang="en">
<%- include("partials/head", { title: "Your Groups | SplitChain" }) %>
<body>
<%- include("partials/navbar") %>

<div class="groups-page">

  <h1 class="page-title">Your Groups</h1>

  <div class="groups-grid">
    <% if (groups && groups.length > 0) { %>
      <% groups.forEach(g => { %>
        <a href="/groups/<%= g._id %>" class="group-card">
          <h3><%= g.name %></h3>
          <p>ðŸ‘¥ <%= g.members.length %> members</p>
        </a>
      <% }) %>
    <% } else { %>
      <p class="empty-text">No groups yet</p>
    <% } %>
  </div>

  <div class="create-box">
    <h2>Create a New Group</h2>

    <form action="/groups/create" method="post">
      <input name="name" placeholder="Group name" required />
      <input name="members" placeholder="Members' wallets (comma separated)" />
      <button type="submit">Create Group</button>
    </form>
  </div>

</div>

<%- include("partials/footer") %>
</body>
</html>
